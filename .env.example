# MarkGo Engine Configuration
# Copy this file to .env and customize for your blog

# Server Configuration
PORT=8080
ENVIRONMENT=development
# Set to production for deployment
# ENVIRONMENT=production

# Base URL for your blog (used for RSS feeds, sitemaps, etc.)
BASE_URL=http://localhost:8080

# Blog Information
BLOG_TITLE=Your Blog Title
BLOG_DESCRIPTION=Your blog description goes here
BLOG_AUTHOR=Your Name
BLOG_AUTHOR_EMAIL=your.email@example.com

# Article Configuration  
ARTICLES_PER_PAGE=10
EXCERPT_LENGTH=200

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_CLEANUP_INTERVAL=300

# Template Configuration (development only)
TEMPLATE_HOT_RELOAD=true

# Contact Form Configuration
CONTACT_ENABLED=true
CONTACT_RATE_LIMIT=5

# Email Configuration (for contact form)
EMAIL_ENABLED=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@yourdomain.com
SMTP_TO=your.email@example.com

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# CORS Configuration
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
# For production, set specific origins:
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Security Headers
SECURITY_HEADERS_ENABLED=true

# Admin Configuration (optional)
ADMIN_ENABLED=false
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-secure-password

# Analytics (optional integrations)
GOOGLE_ANALYTICS_ID=
PLAUSIBLE_DOMAIN=

# Social Media Links (optional)
TWITTER_USERNAME=
GITHUB_USERNAME=yourusername
LINKEDIN_USERNAME=

# Feature Flags
SEARCH_ENABLED=true
RSS_ENABLED=true
JSON_FEED_ENABLED=true
SITEMAP_ENABLED=true

# Performance Settings
READ_TIMEOUT=15
WRITE_TIMEOUT=15
IDLE_TIMEOUT=60

# Development Settings (development only)
DEBUG=false
LOG_LEVEL=info
# Available levels: debug, info, warn, error